<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#111111"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:text="Hello,"/>
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:textStyle="italic"
            android:text=""/>
    </LinearLayout>

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#111111"
        android:text = "A"
        android:textSize="50sp"
        android:textColor="#DADADADA"
        android:gravity="center_vertical"
        android:textAlignment="viewEnd"
        android:paddingRight="25dp"
        android:fontFamily="sans-serif-condensed-medium"
        tools:ignore="RtlCompat">

    </TextView>
    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#111111"
        android:textSize="100sp"
        android:textColor="#AAAAAA"
        android:text=""
        android:gravity="center_vertical"
        android:textAlignment="viewEnd"
        android:paddingRight="25dp"
        android:fontFamily="sans-serif-condensed-medium"
        tools:ignore="RtlCompat">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="500dp"
            android:layout_weight="3"
            android:background="#ffffff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/CE"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="CE"
                    android:textSize="20sp"
                    android:backgroundTint="#414A81"/>
                <Button
                    android:id="@+id/C"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="C"
                    android:textSize="20sp"
                    android:textColor="#ED4242"
                    android:backgroundTint="#414A81"/>
                <Button
                    android:id="@+id/clear"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="⌫"
                    android:textSize="20sp"
                    android:backgroundTint="#414A81"/>
                <Button
                    android:id="@+id/divide"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="÷"
                    android:textSize="20sp"
                    android:backgroundTint="#414A81"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn7"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="7"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/btn8"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="8"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/btn9"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="9"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/multiply"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="×"
                    android:textSize="30sp"
                    android:backgroundTint="#414A81"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn4"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="4"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/btn5"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="5"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/btn6"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="6"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/subtract"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="30sp"
                    android:backgroundTint="#414A81"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn1"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="1"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/btn2"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="2"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/btn3"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="3"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/add"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="30sp"
                    android:backgroundTint="#414A81"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_decimal"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textSize="30sp"
                    android:backgroundTint="#414A81"/>
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:backgroundTint="#74CA3E"/>
                <Button
                    android:id="@+id/equals"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="="
                    android:textSize="30sp"
                    android:backgroundTint="#F85F2E"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="500dp"
            android:layout_weight="2"
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="inv"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="RAD"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="Sin"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="Cos"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="Tan"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:id="@+id/mod"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="%"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="Log"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="!"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="^"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="π"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="e"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bracket_open"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="("
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:id="@+id/bracket_close"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text=")"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:text="√"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#414141"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>